<html lang="pt-BR">
  <head>
    <title>Document</title>
  </head>
  <body>
    <h1>Adicionar Noticia!</h1>

    <% if(error) { %>
      <ul>
        <% for(var i=0;i<error.length;i++) { %>
          <li>
            <%= error[i].msg %>
          </li>
        <% } %>
      </ul>
    <% } %>
    <form action="/home/noticia-salva" method="post">
      <label>Titulo</label>
      <br />
      <input
        type="text"
        id="titulo"
        name="titulo"
        value="<%= contentExists.titulo %>"
        placeholder="Título de notícia"
      />
      <br />
      <label>Resumo</label>
      <br />
      <input
        type="text"
        id="resumo"
        name="resumo"
        value="<%= contentExists.resumo %>"
        placeholder="Resumo da notícia"
      />
      <br />
      <label>Autor</label>
      <br />
      <input type="text" id="autor" name="autor" placeholder="Autor" value="<%= contentExists.autor %>" />
      <br />
      <label>Data</label>
      <br />
      <input
        type="date"
        id="data_noticia"
        name="data_noticia"
        placeholder="Data"
        value="<%= contentExists.data_noticia %>"
      />
      <br />
      <label>Conteudo</label>
      <br />
      <textarea id="conteudo" name="conteudo" rows="5" cols="30"><%= contentExists.conteudo %></textarea>
      <br />
      <input type="submit" value="enviar" />
    </form>
  </body>
</html>
